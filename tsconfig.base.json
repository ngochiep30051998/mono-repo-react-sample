{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@atoms/*": ["libs/ui/src/*"],
      "@molecules/*": ["libs/ui/src/molecules/*"],
      "@organisms/*": ["libs/ui/src/organisms/*"],
      "@templates/*": ["libs/ui/src/templates/*"],
      "@utils/*": ["libs/ui/src/utils/*"],
      "@core": ["libs/core/src/index.ts"],
      "@core/*": ["libs/core/src/*"],
      "@ui": ["libs/ui/src/index.ts"],
      "@ui/*": ["libs/ui/src/*"],
      "@shared-types": ["libs/shared-types/src/index.ts"],
      "@shared-types/*": ["libs/shared-types/src/*"],
      "@hooks": ["libs/hooks/src/index.ts"],
      "@hooks/*": ["libs/hooks/src/*"],
      "@features/admin/auth": ["libs/features/admin/auth/src/index.ts"],
      "@features/admin/auth/*": ["libs/features/admin/auth/src/*"],
      "@features/admin/feature-dashboard": [
        "libs/features/admin/dashboard/src/index.tsx"
      ],
      "@features/admin/feature-dashboard/*": [
        "libs/features/admin/dashboard/src/*"
      ],
      "@features/admin/feature-users": [
        "libs/features/admin/users/src/index.ts"
      ],
      "@features/admin/feature-users/*": ["libs/features/admin/users/src/*"],
      "@features/admin/feature-products": [
        "libs/features/admin/products/src/index.ts"
      ],
      "@features/admin/feature-products/*": [
        "libs/features/admin/products/src/*"
      ],
      "@features/admin/feature-orders": [
        "libs/features/admin/orders/src/index.ts"
      ],
      "@features/admin/feature-orders/*": ["libs/features/admin/orders/src/*"],
      "@mocks": ["libs/mocks/src/index.ts"],
      "@mocks/*": ["libs/mocks/src/*"],
      "@theme": ["libs/theme/src/index.ts"],
      "@theme/*": ["libs/theme/src/*"],
      "@src/test-utils": ["libs/test-utils/src/index.ts"],
      "@src/test-utils/*": ["libs/test-utils/src/*"],
      "@contexts": ["libs/contexts/src/index.ts"],
      "@contexts/*": ["libs/contexts/src/*"],
      "@stores": ["libs/stores/src/index.ts"],
      "@stores/*": ["libs/stores/src/*"],
      "@services": ["libs/services/src/index.ts"],
      "@services/*": ["libs/services/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
