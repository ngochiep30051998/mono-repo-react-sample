{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@atoms/*": ["src/*"],
      "@molecules/*": ["src/molecules/*"],
      "@organisms/*": ["src/organisms/*"],
      "@templates/*": ["src/templates/*"],
      "@utils/*": ["src/utils/*"],
      "@core": ["../core/src/index.ts"],
      "@core/*": ["../core/src/*"],
      "@hooks": ["../hooks/src/index.ts"],
      "@hooks/*": ["../hooks/src/*"],
      "@theme": ["../theme/src/index.ts"],
      "@theme/*": ["../theme/src/*"],
      "@stores": ["../stores/src/index.ts"],
      "@stores/*": ["../stores/src/*"],
      "@services": ["../services/src/index.ts"],
      "@services/*": ["../services/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx", "**/*.stories.tsx"]
}
